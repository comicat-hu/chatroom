<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
        <title>Index</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script>
        
            var host = window.location.host;
            var url = "http://" + host;
            var socket;

            function connect(){
                socket = io();

                testConnect()
                .then(()=>{
                    listenBroadcast();
                })
            }
            function testConnect(){
                return new Promise((resolve, reject)=>{
                    socket.emit("clientTest", "testMsg");
                    socket.on("testOK", function(msg){
                        console.log(msg)
                        if(msg === "200 OK"){
                            $("#input").prop("disabled", false);
                            $("#status").text("success connect");
                            return resolve();
                        }
                        $("#status").text("failed connect");
                        return reject();
                    });
                });
            }
            function disconnect(){
                if(!socket){
                    return;
                }
                socket.disconnect();
                $("#input").prop("disabled", true);
                $("#send").prop("disabled", true);
                console.log("disconnect");
            }
            function sendMessage(){
                let msg = $("#input").val();
                msg = msg.replace(/[\s\t\n]$/, "");
                socket.emit("message", msg);
                $("#send").prop("disabled", true);
            }
            function listenBroadcast(){
                $("#input").focus();
                socket.on("broadcast", function(msg){
                    $("#msgdisplay").append(msg + "\n");
                    setMsgDisplayScroll();
                });
            }
            //set msgdisplay scroll auto bottom
            function setMsgDisplayScroll(){
                let display = $("#msgdisplay");
                display.scrollTop(display[0].scrollHeight);
            }
        </script>
        <script>
            $(document).ready(function(){
                $("#connect").click(function(){
                    connect();
                    this.disabled = true;
                    $("#disconnect").prop("disabled", false);
                }).focus();

                $("#disconnect").click(function(){
                    disconnect();
                    this.disabled = true;
                    $("#connect").prop("disabled", false);
                }).prop("disabled", true);

                $("#send").click(function(){
                    sendMessage();
                    $("#input").val("");
                    $("#input").focus();
                }).prop("disabled", true);

                $("#input").keyup(function(e){
                    if($(this).val().replace(/[\s\n\t]/g,"").length === 0){
                        return $("#send").prop("disabled", true);
                    }else{
                        $("#send").prop("disabled", false);
                        if(e.which === 13 && !e.shiftKey){
                            $("#send").trigger("click");
                        }
                    }
                    
                }).prop("disabled", true);
            });

        </script>
    </head>
    <body>
        <p>Hello Chat</p>
        <button id="connect">connect</button>
        <button id="disconnect">disconnect</button>
        <p id="status">no connect</p>
        <br><br>
        <textarea readonly id="msgdisplay" cols="60" rows="20"></textarea>
        <br><br>
        <textarea id="input" cols="60" rows="2"></textarea>
        <button id="send">Send</button>
    </body>
</html>